{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@auth/*": ["./auth/*"],
      "@common": ["./common"],
      "@common/*": ["./common/*"],
      "@resource": ["./resource"],
      "@resource/*": ["./resource/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
